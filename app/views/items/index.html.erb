<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Action's</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <% if can? :read, item %>
          <td><%= link_to 'Show', item %></td>
        <% end %>

        <% if can? :create, item %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <% end %>

        <% if can? :destroy, item %>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Item', new_item_path %>
